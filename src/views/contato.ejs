<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo</p>

      <%- include('includes/messages') %>

      <% if(contato._id) { %>
        <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else {  %>
        <form class="form-contato" action="/contato/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group mb-2">
          <label class="mb-2">Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" placeholder="Digite seu nome">
        </div>
        <div class="form-group mb-2">
          <label class="mb-2">Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" placeholder="Digite seu sobrenome">
        </div>
        <div class="form-group mb-2">
          <label class="mb-2">E-mail</label>
          <input value="<%= contato.email %>" type="email" class="form-control" name="email" placeholder="Digite seu email">
        </div>
        <div class="form-group mb-3">
          <label class="mb-2">Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" placeholder="Digite seu telefone">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>

    <div class="col-lg-2"></div>

  </div>
</div>

<%- include('includes/footer') %>